<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/ctl_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:paddingBottom="12dp">


        <LinearLayout
            android:id="@+id/ll_et_and_image"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/iv_select_picture"
            app:layout_constraintTop_toTopOf="parent"

            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">

            <EditText
                android:id="@+id/et_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="请输入"

                android:textSize="14sp"
                android:maxHeight="50dp" />




        </LinearLayout>

        <ImageView
            android:id="@+id/iv_select_picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"

            app:layout_constraintBottom_toBottomOf="@+id/bt_send"
            app:layout_constraintTop_toTopOf="@+id/bt_send"
            app:layout_constraintLeft_toRightOf="@+id/ll_et_and_image"
            app:layout_constraintRight_toLeftOf="@+id/bt_send"
            app:layout_goneMarginRight="0dp" />

        <Button
            android:id="@+id/bt_send"
            android:layout_width="42dp"
            android:layout_height="22dp"
            android:text="发送"
            android:textColor="@color/white"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_select_picture"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginBottom="3dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>